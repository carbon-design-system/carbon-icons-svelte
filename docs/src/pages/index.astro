---
import "carbon-components-svelte/css/all.css";
import Home from "../components/index.svelte";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Carbon Design System icons as Svelte components"
    />
    <title>Carbon Icons Svelte</title>
    <script is:inline>
      try {
        const theme = localStorage.getItem("theme");

        if (["white", "g10", "g80", "g90", "g100"].includes(theme)) {
          document.documentElement.setAttribute("theme", theme);
          document.documentElement.style.setProperty("color-scheme", ["white", "g10"].includes(theme) ? "light" : "dark");
        }
      } catch (e) {}
    </script>
  </head>
  <body>
    <Home client:idle />
  </body>
</html>
